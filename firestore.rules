rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }

    match /users/{uid} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == uid;
    }

    match /items/{itemId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.createdByUid == request.auth.uid;
      allow update: if isSignedIn() && resource.data.createdByUid == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.createdByUid == request.auth.uid;
    }

    match /items/{itemId}/claims/{claimId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (
        resource.data.claimerUid == request.auth.uid ||
        get(/databases/$(database)/documents/items/$(itemId)).data.createdByUid == request.auth.uid
      );
    }
  }
}
